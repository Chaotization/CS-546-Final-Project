<div class="login-container">
    <section class="body-wrapper con">
        <form id="login-form" action="/login" method="post">

            <div class="container">
                <h1>Login</h1>
                <div class="inf">
                    <label for="email">Email: </label>
                    <div class="sec-2">
                        <ion-icon name="person-outline"></ion-icon>
                        <input type="text" placeholder="Enter Email" name="email" id="email" value="{{email}}" required><br>
                    </div>
                </div>

                <div class="password">
                    <label for="password">Password: </label>
                    <div class="sec-2">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input type="password" name="password" id="password" placeholder="******" value="{{password}}"
                               required>

                    </div>
                </div>


                <button type="submit" class="login">Login</button>
                <label>
                    <input type="checkbox" checked="checked" name="remember">Remember Me</label>
            </div>

            <div class="footer">
                <a href="/register">Click here to register!</a><br>
                <a href="/forgot-password">Forgot Password?</a>
            </div>
            <ul id="loginError" class="error" hidden></ul>
        </form>
    </section>
</div>
<script src="/public/js/auth/login.js" type="module"></script>
<link rel="stylesheet" href="/public/css/main.css">
